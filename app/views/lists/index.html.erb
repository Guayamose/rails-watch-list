<%= image_tag "index_photos/faded_gallery-OfdOEdGYiuk-unsplash.jpg", alt: "text", class: "background" %>
<h1 class="text-center title">Lists</h1>
<%= link_to "New List", new_list_path, class: "btn btn-primary d-flex justify-content-center w-25 mx-auto my-3 rounded-5" %>
<div class="row row-cols-1 row-cols-md-3 g-4 border-color-black">
  <% @lists.each do |list| %>
   <%= link_to list_path(list), class: "text-white text-decoration-none" do %>
  <div class="card-category mx-auto w-30" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://image.pollinations.ai/prompt/<%= list.name %>&contrast&movie/)">
    <h5 class="card-title"><%= list.name %></h5>
  </div>
<% end %>


  <% end %>
</div>
<style>
  .border-color-black {
    border-color: #004545ff;
  }
  .btn-primary {
    background-color: #01b0b0ff;
    border-color: #004545ff;
  }
  .btn-primary:hover {
    background-color: #05d8d8ff;
    border-color: #004545ff;
  }
  .title {
    margin-top: 50px;
    font-family: "Helvetica", sans-serif;
    font-weight: bold;
    font-size: 60px;
    color: #ffffffca;
  }
  .border {

    margin-top: 90px;
    margin-left: 20px;
    margin-right: 20px;
    border-radius: 45px;
    box-shadow: 0 0 15px rgba(0,0,0,0.2);

  }
  .border:hover {
    box-shadow: 0 0 15px rgba(0,0,0,0.5);
    cursor: pointer;


  }
  .background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -1;
  }
  .body {
    background-color: #515151;
  }
  .card-category {
  background-size: cover;
  background-position: center;
  height: 180px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 24px;
  font-weight: bold;
  text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
  border-radius: 5px;
  overflow: hidden;
  border: 2px solid #004545ff;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
}

.w-30 {
  margin-top: 100px;
  width: 400px;
  height: 300px;
}

</style>
